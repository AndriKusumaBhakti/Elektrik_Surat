<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greywhite">
        <ScrollView
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/greywhite"
                android:paddingBottom="@dimen/medbooks_10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:paddingTop="@dimen/medbooks_5dp">

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/accountSetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:gravity="left|center"
                    android:paddingBottom="@dimen/medbooks_10dp"
                    android:paddingLeft="@dimen/medbooks_25dp"
                    android:paddingRight="@dimen/medbooks_20dp"
                    android:paddingTop="@dimen/medbooks_10dp"
                    android:text="Pengaturan Akun"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/medbooks_12dp"
                    android:drawablePadding="@dimen/medbooks_20dp"
                    android:drawableLeft="@drawable/icon_setting"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/more_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:gravity="left|center"
                    android:paddingBottom="@dimen/medbooks_10dp"
                    android:paddingLeft="@dimen/medbooks_25dp"
                    android:paddingRight="@dimen/medbooks_20dp"
                    android:paddingTop="@dimen/medbooks_10dp"
                    android:text="Help"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/medbooks_12dp"
                    android:drawablePadding="@dimen/medbooks_20dp"
                    android:drawableLeft="@drawable/icon_help"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/black" />
                <TextView
                    android:id="@+id/setting_btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:gravity="left|center"
                    android:paddingBottom="@dimen/medbooks_10dp"
                    android:paddingLeft="@dimen/medbooks_25dp"
                    android:paddingRight="@dimen/medbooks_20dp"
                    android:paddingTop="@dimen/medbooks_10dp"
                    android:text="Keluar"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/medbooks_12dp"
                    android:drawablePadding="@dimen/medbooks_20dp"
                    android:drawableLeft="@drawable/icon_out"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/black" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <ViewAnimator
        android:id="@+id/select_profile_animator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/google_blue"
            android:orientation="vertical"
            android:paddingLeft="@dimen/medbooks_16dp"
            android:paddingRight="@dimen/medbooks_16dp"
            android:paddingTop="@dimen/medbooks_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medbooks_10dp"
                android:layout_marginBottom="@dimen/medbooks_10dp"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/medbooks_2dp"
                    android:layout_marginBottom="@dimen/medbooks_5dp"
                    android:background="@color/new_purple"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/barAvatar"
                        android:layout_width="@dimen/medbooks_40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/medbooks_5dp"
                        android:layout_height="@dimen/medbooks_40dp"
                        android:background="@drawable/no_user" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/name_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:gravity="left|center"
                            android:paddingBottom="@dimen/medbooks_5dp"
                            android:paddingLeft="@dimen/medbooks_25dp"
                            android:paddingRight="@dimen/medbooks_20dp"
                            android:paddingTop="@dimen/medbooks_5dp"
                            android:text="Nama"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/medbooks_12dp"/>
                        <TextView
                            android:id="@+id/alamat_uset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:gravity="left|center"
                            android:paddingBottom="@dimen/medbooks_5dp"
                            android:paddingLeft="@dimen/medbooks_25dp"
                            android:paddingRight="@dimen/medbooks_20dp"
                            android:paddingTop="@dimen/medbooks_5dp"
                            android:text="Alamat"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/medbooks_12dp"/>
                        <TextView
                            android:id="@+id/ttl_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:gravity="left|center"
                            android:paddingBottom="@dimen/medbooks_5dp"
                            android:paddingLeft="@dimen/medbooks_25dp"
                            android:paddingRight="@dimen/medbooks_20dp"
                            android:paddingTop="@dimen/medbooks_5dp"
                            android:text="Tempat, Tanggal Lahir"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/medbooks_12dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/medbooks_2dp"
                    android:layout_marginTop="@dimen/medbooks_5dp"
                    android:layout_marginBottom="@dimen/medbooks_5dp"
                    android:background="@color/new_purple"/>
            </LinearLayout>
        </LinearLayout>
    </ViewAnimator>
</FrameLayout>