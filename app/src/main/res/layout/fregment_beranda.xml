<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_page_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greywhite">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="56dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/medbooks_20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medbooks_20dp"
                    android:layout_marginBottom="@dimen/medbooks_10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile_home_avatar"
                        android:layout_width="@dimen/medbooks_70dp"
                        android:layout_height="@dimen/medbooks_70dp"
                        android:src="@drawable/no_user" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/profile_home_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/medbooks_10dp"
                            android:ellipsize="marquee"
                            android:gravity="center_vertical"
                            android:maxLength="35"
                            android:text="Nama"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medbooks_14dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/medbooks_20dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/medbooks_10dp"
                    android:background="@drawable/shape_profile">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/rememberNow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/medbooks_10dp"
                            android:ellipsize="marquee"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:maxLength="35"
                            android:textColor="@color/greywhite"
                            android:textSize="@dimen/medbooks_13dp"
                            android:text="Remember"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/statusRember"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/medbooks_10dp"
                            android:ellipsize="marquee"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:maxLength="35"
                            android:textColor="@color/greywhite"
                            android:textSize="@dimen/medbooks_13dp"
                            android:text="Status"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/medbooks_5dp"
                        android:layout_height="@dimen/medbooks_2dp"
                        android:background="@color/new_purple"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_margin="@dimen/medbooks_5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="invisible"
                            android:src="@drawable/background"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:visibility="invisible"
                            android:layout_margin="@dimen/medbooks_5dp"
                            android:layout_height="match_parent"
                            android:ellipsize="marquee"
                            android:gravity="center_vertical|center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/medbooks_20dp"
                            android:text="Elektronik Surat"
                            android:textStyle="bold"/>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_shape"
                    android:layout_marginTop="@dimen/medbooks_20dp"
                    android:padding="@dimen/medbooks_5dp"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/medbooks_5dp"
                            android:src="@drawable/wisata_waru"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/medbooks_5dp"
                            android:layout_height="match_parent"
                            android:ellipsize="marquee"
                            android:gravity="center_vertical|bottom|center"
                            android:textColor="@color/greywhite"
                            android:layout_marginBottom="@dimen/medbooks_10dp"
                            android:textSize="@dimen/medbooks_14dp"
                            android:text="Kabupaten pamekasan"
                            android:textStyle="bold"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <ViewAnimator
        android:id="@+id/select_profile_animator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/google_blue"
            android:orientation="vertical"
            android:paddingLeft="@dimen/medbooks_16dp"
            android:paddingRight="@dimen/medbooks_16dp"
            android:paddingTop="@dimen/medbooks_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medbooks_10dp"
                android:layout_marginBottom="@dimen/medbooks_10dp"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/medbooks_2dp"
                    android:layout_marginBottom="@dimen/medbooks_5dp"
                    android:background="@color/new_purple"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/barAvatar"
                        android:layout_width="@dimen/medbooks_40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/medbooks_5dp"
                        android:layout_height="@dimen/medbooks_40dp"
                        android:background="@drawable/no_user" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/name_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:gravity="left|center"
                            android:paddingBottom="@dimen/medbooks_5dp"
                            android:paddingLeft="@dimen/medbooks_25dp"
                            android:paddingRight="@dimen/medbooks_20dp"
                            android:paddingTop="@dimen/medbooks_5dp"
                            android:text="Nama"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/medbooks_12dp"/>
                        <TextView
                            android:id="@+id/alamat_uset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:gravity="left|center"
                            android:paddingBottom="@dimen/medbooks_5dp"
                            android:paddingLeft="@dimen/medbooks_25dp"
                            android:paddingRight="@dimen/medbooks_20dp"
                            android:paddingTop="@dimen/medbooks_5dp"
                            android:text="Alamat"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/medbooks_12dp"/>
                        <TextView
                            android:id="@+id/ttl_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:gravity="left|center"
                            android:paddingBottom="@dimen/medbooks_5dp"
                            android:paddingLeft="@dimen/medbooks_25dp"
                            android:paddingRight="@dimen/medbooks_20dp"
                            android:paddingTop="@dimen/medbooks_5dp"
                            android:text="Tempat, Tanggal Lahir"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/medbooks_12dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/medbooks_2dp"
                    android:layout_marginTop="@dimen/medbooks_5dp"
                    android:layout_marginBottom="@dimen/medbooks_5dp"
                    android:background="@color/new_purple"/>
            </LinearLayout>
        </LinearLayout>
    </ViewAnimator>
</FrameLayout>
