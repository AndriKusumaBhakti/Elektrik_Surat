<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/white">
    <androidx.cardview.widget.CardView
        android:id="@+id/psik"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp"
        android:background="@color/greywhite">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/medbooks_3dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/medbooks_5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/single_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/medbooks_2dp"
                    android:text="Nama"
                    android:textSize="@dimen/medbooks_12dp"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/single_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Alamat"
                    android:textSize="@dimen/medbooks_10dp"/>
                <TextView
                    android:id="@+id/single_jenis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Jenis Surat"
                    android:textSize="@dimen/medbooks_10dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/onReject"
                android:src="@drawable/reject"
                android:layout_width="@dimen/medbooks_35dp"
                android:layout_height="@dimen/medbooks_35dp"
                android:layout_marginRight="@dimen/medbooks_5dp"
                android:layout_marginTop="@dimen/medbooks_3dp"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/onApprove"
                android:src="@drawable/approve"
                android:layout_width="@dimen/medbooks_35dp"
                android:layout_height="@dimen/medbooks_35dp"
                android:layout_marginTop="@dimen/medbooks_3dp"
                android:gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>