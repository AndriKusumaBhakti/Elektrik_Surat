<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/google_blue</item>
        <item name="colorPrimaryDark">@color/google_blue</item>
        <item name="colorAccent">@color/google_blue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/google_blue</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NoActionBarTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.FullScreenDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>
    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="label_theme" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/medbooks_10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/medbooks_10dp</item>
        <item name="android:layout_marginRight">@dimen/medbooks_10dp</item>
        <item name="android:textSize">@dimen/medbooks_14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="label_date_theme" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableLeft">@drawable/calender</item>
        <item name="android:paddingLeft">@dimen/medbooks_5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/medbooks_10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/medbooks_5dp</item>
        <item name="android:layout_marginLeft">@dimen/medbooks_5dp</item>
        <item name="android:layout_marginRight">@dimen/medbooks_5dp</item>
        <item name="android:textSize">@dimen/medbooks_14dp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="input_theme" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/medbooks_12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/medbooks_10dp</item>
        <item name="android:layout_marginRight">@dimen/medbooks_10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/login_shape_input</item>
        <item name="android:textSize">@dimen/medbooks_14dp</item>
    </style>

    <style name="date_theme" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/medbooks_12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/medbooks_10dp</item>
        <item name="android:layout_marginRight">@dimen/medbooks_10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/login_shape_input</item>
        <item name="android:textSize">@dimen/medbooks_14dp</item>
    </style>

</resources>
