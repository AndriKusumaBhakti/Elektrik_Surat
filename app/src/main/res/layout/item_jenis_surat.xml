<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/white">
    <androidx.cardview.widget.CardView
        android:id="@+id/psik"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp"
        android:background="@color/greywhite">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/medbooks_10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/medbooks_5dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/medbooks_5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center|left">
                <TextView
                    android:id="@+id/single_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Nama"
                    android:textSize="@dimen/medbooks_14dp"
                    android:maxLines="1"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/icon_request"
                android:src="@drawable/request_file"
                android:layout_width="@dimen/medbooks_30dp"
                android:layout_height="@dimen/medbooks_30dp"
                android:layout_marginRight="@dimen/medbooks_5dp"
                android:gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>