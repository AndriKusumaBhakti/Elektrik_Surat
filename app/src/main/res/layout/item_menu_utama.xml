<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/white">
    <androidx.cardview.widget.CardView
        android:id="@+id/psik"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp"
        android:background="@color/greywhite">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="@dimen/medbooks_10dp">
            <ImageView
                android:id="@+id/icon_request"
                android:src="@drawable/icon_file_saya"
                android:layout_width="@dimen/medbooks_50dp"
                android:layout_height="@dimen/medbooks_50dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/txtNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Form Tambahan"
                android:layout_marginTop="@dimen/medbooks_10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/medbooks_10dp"
                android:maxLines="1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>